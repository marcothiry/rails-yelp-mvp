<%= simple_form_for(@restaurant) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs ">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>

    <%= f.select :category, options_for_select(["chinese",  "italian", "japanese", "french", "belgian"]), {}, class: "form-control"%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
